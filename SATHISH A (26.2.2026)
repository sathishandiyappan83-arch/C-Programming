\\check if a character is an alphabet, digit, or special symbol.
#include <stdio.h>
#include <ctype.h>

int main() {
    char cha;
    printf("Enter a character: ");
    scanf("%c", &cha);

    if (isalpha(cha)) {
        printf("%c is an alphabet.\n", cha);
    } else if (isdigit(cha)) {
        printf("%c is a digit.\n", cha);
    } else {
        printf("%c is a special symbol.\n", cha);
    }

    return 0;
}

\\calculate Simple Interest using float variables.
#include <stdio.h>

int main() {
    float amo,rate,year,Interest;
    
    printf("Enter amount: ");
    scanf("%f", &amo);

    printf("Enter Rate: ");
    scanf("%f", &rate);

    printf("Enter year: ");
    scanf("%f", &year);

    Interest = (amo * rate * year) / 100;

    printf("Simple Interest = %.2f\n",Interest);

    return 0;
}

\\print the ASCII characters from A to Z using a loop.
#include <stdio.h>
int main(){
    char i;
    printf("ASCII from A to Z:\n");
    for (i='A';i<='Z';i++){
        printf("%c,%d\n",i,i);
        
    }
    return 0;

\\rotate the elements of an array to the left by 1 position.

#include <stdio.h>

int main() {
    int n, i;

    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int first = arr[0];

    for (i = 0; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }

    arr[n - 1] = first;

    printf("Array after left rotation by 1:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
}


\\remove duplicate elements from an array.
#include <stdio.h>

int main() {
    int n, i, j, k;

    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; ) {
            if (arr[i] == arr[j]) {

                for (k = j; k < n - 1; k++) {
                    arr[k] = arr[k + 1];
                }
                n--;
            } else {
                j++;
            }
        }
    }

    printf("Array after removing duplicates:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}

\\subtract Matrix B from Matrix A.

#include <stdio.h>

int main() {
    int ro, co, i, j;

    printf("Enter number of rows: ");
    scanf("%d", &ro);
    printf("Enter number of columns: ");
    scanf("%d", &co);

    int A[ro][co], B[ro][co], C[ro][co];
    
    printf("Enter elements of Matrix A:\n");
    for (i = 0; i < ro; i++) {
        for (j = 0; j < co; j++) {
            scanf("%d", &A[i][j]);
        }
    }

    printf("Enter elements of Matrix B:\n");
    for (i = 0; i < ro; i++) {
        for (j = 0; j < co; j++) {
            scanf("%d", &B[i][j]);
        }
    }

    for (i = 0; i < ro; i++) {
        for (j = 0; j < co; j++) {
            C[i][j] = A[i][j] - B[i][j];
        }
    }

    printf("Resultant Matrix (A - B):\n");
    for (i = 0; i < ro; i++) {
        for (j = 0; j < co; j++) {
            printf("%d ", C[i][j]);
        }
        printf("\n");
    }

    return 0;
}

\\using an if-else if ladder to categorize a person as "Child", "Teenager", or "Adult" based on age.
#include <stdio.h>

int main() {
    int age;

    printf("Enter age: ");
    scanf("%d", &age);

    if (age >= 0 && age <= 12) {
        printf("Category: Child\n");
    } else if (age >= 13 && age <= 19) {
        printf("Category: Teenager\n");
    } else if (age >= 20) {
        printf("Category: Adult\n");
    } else {
        printf("Invalid age entered.\n");
    }

    return 0;
}

\\program to sort a list of characters alphabetically.

#include <stdio.h>

int main() {
    int n, i, j;
    char temp;

    printf("Enter the number of characters: ");
    scanf("%d", &n);

    char arr[n];

    printf("Enter %d characters:\n", n);
    for (i = 0; i < n; i++) {
        scanf(" %c", &arr[i]);
    }

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    printf("Characters in alphabetical order:\n");
    for (i = 0; i < n; i++) {
        printf("%c ", arr[i]);
    }

    return 0;
}
\\check if a string contains only digits. 

#include <stdio.h>
#include <string.h>
#include <ctype.h>


int digits(char str[]) {
    for (int i = 0; i < strlen(str); i++) {
        if (!isdigit(str[i])) {
            return 0;
        }
    }
    return 1;
}

int main() {
    char str[100];

    printf("Enter a string: ");
    scanf("%s", str);

    if (digits(str)) {
        printf("The string contains only digits.\n");
    } else {
        printf("The string contains non-digit characters.\n");
    }

    return 0;
}

\\find the Greatest Common Divisor (GCD) of two numbers.

#include <stdio.h>

// Function to compute GCD using recursion
int gcd(int a, int b) {
    if (b == 0)
        return a;
    return gcd(b, a % b);
}

int main() {
    int num1, num2;

    printf("Enter two numbers: ");
    scanf("%d %d", &num1, &num2);

    printf("GCD of %d and %d is %d\n", num1, num2, gcd(num1, num2));

    return 0;
}
